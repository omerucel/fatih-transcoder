<!doctype html>
<html>
  <head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <title>{{ page_title }} - Fatih Transcoder</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    <link href='http://fonts.googleapis.com/css?family=Comfortaa:400,300,700&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
    <link rel="stylesheet" href="{{ base_url }}/components/bootstrap.css/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ base_url }}/components/font-awesome/css/font-awesome.min.css" />
    <!--[if lt IE 7]>
        <link rel="stylesheet" href="{{ base_url }}/components/font-awesome/css/font-awesome-ie7.min.css" />
    <![endif]-->
    <link rel="stylesheet" href="{{ base_url }}/assets/css/main.css">
      {% block css %}{% endblock %}
  </head>
  <body>
    <div id="header">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <a class="brand pull-left" href="{{ base_url }}/">Fatih Transcoder</a>
                    <ul class="nav nav-pills pull-left">
                        <li {% if current_page == 'account' %}class="active"{% endif %}><a href="{{ base_url }}/account">Hesabım</a></li>
                        <li {% if current_page == 'file-manager' %}class="active"{% endif %}><a href="{{ base_url }}/file-manager">Dosya Yöneticisi</a></li>
                        <li {% if current_page == 'history' %}class="active"{% endif %}><a href="{{ base_url }}/history">İşlem Geçmişi</a></li>
                    </ul>
                    {% if not user %}
                        <ul class="nav nav-pills pull-right">
                            <li {% if current_page == 'login' %}class="active"{% endif %}><a href="{{ base_url }}/login">Oturum Aç</a></li>
                            <li {% if current_page == 'register' %}class="active"{% endif %}><a href="{{ base_url }}/register">Kayıt Ol</a></li>
                        </ul>
                    {% else %}
                        <ul class="nav nav-pills pull-right">
                            <li><a href="{{ base_url }}/logout">Oturumu Kapat</a></li>
                        </ul>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {% block page_header_wrapper %}
        <div id="page-header">
            <div class="container">
                <div class="row">
                    <div class="span12">
                        <div class="page-header">
                            {% block page_header %}
                                <h1>{{ page_title }}</h1>
                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block content_wrapper %}
        <div id="content">
            {% block content %}
            {% endblock %}
        </div>
    {% endblock %}

    <div id="footer">
        <div class="container">
            <div class="row12">

            </div>
        </div>
    </div>

    <script src="{{ base_url }}/components/jquery/jquery.min.js"></script>
    <script src="{{ base_url }}/components/bootstrap.css/js/bootstrap.min.js"></script>
    <script src="{{ base_url }}/components/PicoModal/src/picoModal.js"></script>
    <script src="{{ base_url }}/assets/js/app.js"></script>
    {% block javascript %}{% endblock %}
  </body>
</html>
